
@{
    ViewBag.Title = "Create";
}

<h2>Create Author</h2>

@if (ViewBag.message == true)
{
    <div class="container" style="background-color:skyblue;">
        <div class="toast">
            <div class="toast-body">
                New Author has been created
            </div>
        </div>
    </div>
}


<form action="~/Author/Create" method="post">
    <br /> <br />
    <div class="form-group row">
        <label class="col-sm-2">Author Name</label>
        <input type="text" id="AuthorName" name="AuthorName" class="form-control  form-control-sm col-sm-4" />
    </div>
    <div class="form-group row">
        <label class="col-sm-2">Author Location</label>
        <input type="text" id="AuthorLocation" name="AuthorLocation" class="form-control form-control-sm col-sm-4" />
    </div>
    <div class="form-group row">
        <label class="col-sm-2">Author Description </label>
        <input type="text" id="AuthorDesc" name="AuthorDesc" class="form-control form-control-sm col-sm-4" />
    </div>
    <br /> <br />
    <input type="submit" value="Save" class="btn btn-success" />
    <br /> <br />
</form>



    @{<script src="~/Scripts/jquery-3.4.1.min.js">
        $(document).ready
            (function ()
            {
                $(".toast").toast({ delay: 3000 });
                $(".toast").toast("show");
            }
           )
        </script>
        }


