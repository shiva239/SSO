@model IEnumerable<Library.Models.Author>

@{
    ViewBag.Title = "Index";
}

<h1>Authors</h1>

<div class="text-right">
    <button type="button" class="btn btn-info small" onclick="location.href='@Url.Action("Create", "Author")'">
        Create New Author
    </button>
</div>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AuthorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorDesc)
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.AuthorName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AuthorLocation)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AuthorDesc)
    </td>
    <td>
        <button type="button" class="btn btn-info small" onclick="location.href='@Url.Action("Edit", "Author", new { id = item.AuthorId })'">
            Edit
        </button>
        <button type="button" class="btn btn-info small" onclick="location.href='@Url.Action("Delete", "Author", new { id = item.AuthorId })'">
            Delete
        </button>
    </td>
</tr>
}

</table>
