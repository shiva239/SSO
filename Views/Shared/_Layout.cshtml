<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    <title>@ViewBag.Title - Library Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top bg-info">
        <div class="container">
            <div class="navbar-header navbar-expand-sm bg-info">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Library Management", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse navbar-expand-sm bg-info">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>



    <div class="form-group row">

        <div class="col-sm-1 bg-info">
            <nav class="navbar align-content-center">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Book", "Index", "Book")</li>
                    <li>@Html.ActionLink("Author", "Index", "Author")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </nav>
        </div>

        <div class="col-sm-10">
            @RenderBody()
        </div>
    </div>

    <nav class="navbar navbar-expand-sm bg-info" style="width: 100%">
        <footer class="text-center align-content-center">
            <p>&copy; @DateTime.Now.Year - Library Management Application</p>
        </footer>
    </nav>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
